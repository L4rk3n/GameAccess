@page "/GameList"
@inject HttpClient Http
@using GameAccess.Models

@attribute [Authorize(Roles = "User")]
@attribute [Authorize(Roles = "Admin")]

<h3>GameList</h3>

<div class="row">
    <div class="col-5">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Actions</th>
                    <th><button class="btn btn-success btn-sm" @onclick="@(() => SelectNewGame(-1))">Ajout</button></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Game g in Liste)
                {
                    <tr>
                        <td>@g.Title</td>
                        <td class="btn-group-sm">
                            <button class="btn btn-info btn-sm" @onclick="@(() => SelectDetail(g.Id))">Detail</button>
                            <button class="btn btn-warning btn-sm" @onclick="@(() => SelectUpdate(g.Id))">Update</button>
                            <button class="btn btn-danger btn-sm" @onclick="@(() => SelectDelete(g.Id))">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-6">
        @if (SelectedNewGameId < 0)
        {
                <GameCreate NotifyNewGame="LoadData" />
        }
        @if(SelectedDetailId > 0)
        {
            <GameDetail Id="SelectedDetailId" />
        }
        @if (SelectedUpdateId > 0)
        {
            <GameUpdate Id="SelectedUpdateId" NotifyUpdatedGame="LoadData" />
        }
        @if (SelectedDeleteId > 0)
        {
            <GameDelete Id="SelectedDeleteId" NotifyDeletedGame="LoadData" />
        }
    </div>
</div>