<div class="card">
    <div class="card-header">
        <h3>Suppression de @DeletedGame.Title</h3>
    </div>
    <div class="card-body">
        <ul>
            <li>Année de sortie : @DeletedGame.ReleaseYear</li>
            <li>Adresse Synopsis : @DeletedGame.Synopsis</li>
        </ul>
    </div>
    <div>
        <form @onsubmit="OnValidSubmitAsync">
            <button type="submit" class="btn btn-danger">Confirmer</button>
        </form>
    </div>
</div>
